<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DocumentCaptionText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TOCPageNumber">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TOCCaptionText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TOCDateText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DocumentDateText">
        <item name="android:textColor">#FFEFEFEF</item>
        <item name="android:background">#aa000000</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="OptionsText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FairySpeechbubble">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SelectorButton">
        <item name="android:width">115dip</item>
        <item name="android:height">40dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="StartActivityButton">
        <item name="android:background">@drawable/btn_start_activity</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="contribute_bullet_point">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point_2</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="blur_warning_bullet_point">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point_2</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="contribute_action">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawableLeft">@drawable/ic_bullet_point</item>
    </style>

    <style name="ocr_tip_style">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ocr_tip_style_check" parent="ocr_tip_style">
        <item name="android:drawableLeft">@drawable/check</item>
    </style>
    <style name="ocr_tip_style_cross" parent="ocr_tip_style">
        <item name="android:drawableLeft">@drawable/cross</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:background">@color/accent</item>
        <item name="background">@color/accent</item>
    </style>

    <style name="ColoredButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/accent</item>
    </style>


</resources>